<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_cart_product"
    style="@style/CardView.RecyclerViewAdapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_name"
            style="@style/TextViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_food"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/text_view_quantity"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_name"
            app:layout_constraintWidth_percent="0.5"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>
        <TextView
            android:id="@+id/text_view_extra_ingredients"
            style="@style/TextViewDescription"
            android:layout_width="0dp"
            android:gravity="end|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_food"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text_view_removed_ingredients"
            style="@style/TextViewDescription"
            android:layout_width="0dp"
            android:layout_marginTop="6dp"
            android:gravity="end|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_food"
            app:layout_constraintTop_toBottomOf="@+id/text_view_extra_ingredients"/>
        <TextView
            android:id="@+id/text_view_price"
            style="@style/TextViewTitle"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toTopOf="@id/button_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_removed_ingredients"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_delete"
            style="@style/ImageButton"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/shopping_cart_remove_item_title"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_edit"
            style="@style/ImageButton"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/shopping_cart_edit_product_title"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_delete"/>
        <TextView
            android:id="@+id/text_view_quantity"
            style="@style/TextViewDescription"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_food"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>