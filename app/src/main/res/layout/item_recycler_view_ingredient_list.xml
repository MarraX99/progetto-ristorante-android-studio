<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_ingredient"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35"/>
    <TextView
        android:id="@+id/text_view_ingredient_name"
        style="@style/TextViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/image_view_ingredient"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_ingredient_price"
        style="@style/TextViewTitle"
        android:layout_marginTop="10dp"
        android:textColor="?attr/colorSecondaryVariant"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/button_decrement"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/image_view_ingredient"
        app:layout_constraintTop_toBottomOf="@+id/text_view_ingredient_name"/>
    <ImageButton
        android:id="@+id/button_increment"
        style="@style/ImageButton"
        android:contentDescription="@string/increment_title"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_ingredient_name"/>
    <ImageButton
        android:id="@+id/button_decrement"
        style="@style/ImageButton"
        android:contentDescription="@string/decrement_title"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_increment"
        app:layout_constraintTop_toBottomOf="@id/text_view_ingredient_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>