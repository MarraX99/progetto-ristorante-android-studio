<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    tools:context=".MainFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_images"
            style="@style/CardView.Main"
            android:layout_height="150dp"
            app:contentPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ViewFlipper
                android:id="@+id/view_flipper_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animationCache="true"
                android:autoStart="false"
                android:contentDescription="@string/title_images_main"
                android:inAnimation="@android:anim/slide_in_left"
                android:isScrollContainer="true"
                android:longClickable="true"
                android:outAnimation="@android:anim/slide_out_right"
                android:overScrollMode="ifContentScrolls"
                android:scrollIndicators="bottom|end"
                android:scrollbarStyle="insideOverlay"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_new_order"
            style="@style/CardView.Main"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            app:cardUseCompatPadding="false"
            app:contentPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_images">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/main_new_order"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_new_order"/>
            <TextView
                style="@style/TextViewTitleColorVariant"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:background="@color/gray_translucent"
                android:text="@string/main_new_order"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_order_list"
            style="@style/CardView.Main"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            app:cardUseCompatPadding="false"
            app:contentPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_new_order">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/main_new_order"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_new_order"/>
            <TextView
                style="@style/TextViewTitleColorVariant"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:background="@color/gray_translucent"
                android:text="@string/my_orders_title"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"/>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>