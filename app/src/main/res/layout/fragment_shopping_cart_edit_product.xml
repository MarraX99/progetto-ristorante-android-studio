<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.order.FragmentEditCartProduct">
    <data>
        <variable
            name="viewModel"
            type="com.projectrestaurant.viewmodel.FoodOrderViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            style="@style/CardView.Main"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_view_food_title"
                        style="@style/TextViewTitle"
                        android:textAllCaps="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_view_food"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_food_title"
                        app:layout_constraintWidth_percent="0.55"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                    <TextView
                        android:id="@+id/text_view_food_description"
                        style="@style/TextViewDescription"
                        android:layout_width="0dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_view_food"
                        app:layout_constraintWidth_percent="0.55"/>
                    <TextView
                        android:id="@+id/textView2"
                        style="@style/TextViewTitle"
                        android:layout_marginTop="6dp"
                        android:text="@string/food_quantity_title"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_food_description"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="6dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintWidth_percent="0.95"/>
                    <ImageButton
                        android:id="@+id/button_increment"
                        style="@style/ImageButton"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/increment_title"
                        android:src="@drawable/ic_add"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_view_quantity"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider"
                        app:shapeAppearanceOverlay="@style/button_circle" />
                    <TextView
                        android:id="@+id/text_view_quantity"
                        style="@style/TextViewTitle"
                        android:layout_marginTop="16dp"
                        android:text="@{viewModel.foodQuantity.toString()}"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider" />
                    <ImageButton
                        android:id="@+id/button_decrement"
                        style="@style/ImageButton"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/decrement_title"
                        android:src="@drawable/ic_remove"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_quantity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider"
                        app:shapeAppearanceOverlay="@style/button_circle" />
                    <TextView
                        android:id="@+id/textView3"
                        style="@style/TextViewTitle"
                        android:layout_marginTop="16dp"
                        android:text="@string/food_ingredients_edit_title"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_quantity" />
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider2"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="6dp"
                        android:visibility="gone"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:layout_constraintWidth_percent="0.95" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_food_ingredients"
                        style="@style/RecyclerView"
                        android:layout_marginTop="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/materialDivider2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_shopping_cart"
            style="@style/CardView.Button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView1"
            app:layout_constraintWidth_percent="0.95">
            <TextView
                android:id="@+id/text_view_shopping_cart_title"
                style="@style/TextViewTitle"
                android:layout_gravity="center"
                android:text="@string/shopping_cart_edit_product_title"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"/>
            <TextView
                android:id="@+id/text_view_shopping_cart_price"
                style="@style/TextViewTitle"
                android:layout_gravity="center_vertical|end"
                android:text="@{@string/shopping_cart_product_price(viewModel.totalPriceString.toString())}"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>