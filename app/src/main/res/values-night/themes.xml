<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectRestaurant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_700</item>
        <item name="colorPrimaryVariant">@color/full_black</item>
        <item name="colorOnPrimary">@color/full_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/full_black</item>
        <!-- Background colors -->
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorPrimarySurface">@color/gray_900</item>
        <item name="backgroundColor">@color/full_black</item>
        <item name="colorOnBackground">@color/full_white</item>
        <item name="colorOnSurface">@color/full_white</item>
        <item name="colorOnSurfaceVariant">@color/full_white</item>
        <item name="colorError">@color/fire_brick</item>
        <item name="colorBackgroundFloating">@color/full_black</item>
        <item name="colorContainer">@color/full_black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/full_black</item>
        <item name="android:navigationBarColor">@color/gray_700</item>
        <item name="android:windowBackground">@color/full_black</item>
        <item name="android:colorBackground">@color/full_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProjectRestaurant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjectRestaurant.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurfaceVariant</item>
        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ProjectRestaurant.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurfaceVariant</item>
        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
    </style>
</resources>