<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectRestaurant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/full_white</item>
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/full_black</item>
        <!-- Background colors -->
        <item name="backgroundColor">@color/full_white</item>
        <item name="colorSurface">@color/full_white</item>
        <item name="colorOnBackground">@color/full_black</item>
        <item name="colorOnSurface">@color/full_black</item>
        <item name="colorError">@color/fire_brick</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProjectRestaurant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjectRestaurant.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/full_white</item>
        <item name="android:textColorSecondary">@color/full_white</item>
    </style>

    <style name="Theme.ProjectRestaurant.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/full_white</item>
        <item name="android:textColorSecondary">@color/full_white</item>
    </style>
</resources>